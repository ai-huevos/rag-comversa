# Core LLM Providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here        # Optional (ensemble reviewer)
GEMINI_API_KEY=your_gemini_api_key_here              # Optional (Google Gemini provider)
DEEPSEEK_API_KEY=your_deepseek_api_key_here          # Optional (DeepSeek provider)
K2_API_KEY=your_k2_api_key_here                      # Optional (K2 provider)

# OCR / Document Intake
MISTRAL_API_KEY=your_mistral_pixtral_key_here        # Required for Pixtral OCR pipeline

# Ensemble Validation Settings (Optional)
ENABLE_ENSEMBLE_REVIEW=false
ENSEMBLE_MODE=basic

# Databases & Graph
DATABASE_URL=postgresql://user:pass@host:5432/dbname
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# Queues / Caching (optional, used by ingestion queue & context registry if configured)
REDIS_URL=redis://localhost:6379/0

# To use this file:
# 1. Copy this file to .env
# 2. Replace the placeholder values with your actual secrets (never commit real keys)
# 3. Source the file or reload your shell so the variables take effect

# Example:
# OPENAI_API_KEY=sk-proj-abc123...
# DATABASE_URL=postgresql://postgres@localhost:5432/comversa_rag
# NEO4J_PASSWORD=comversa_neo4j_2025
