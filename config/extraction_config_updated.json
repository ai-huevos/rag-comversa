{
  "extraction": {
    "max_retries": 3,
    "timeout_seconds": 60,
    "max_tokens": 4000
  },
  "model_routing": {
    "round_robin": [
      "gemini-2.0-flash-exp",
      "moonshot-v1-8k",
      "gemini-1.5-flash",
      "gpt-4o-mini",
      "deepseek-chat"
    ],
    "fallback": [
      "gemini-2.0-flash-exp",
      "gpt-4o-mini",
      "moonshot-v1-8k",
      "gemini-1.5-flash",
      "deepseek-chat",
      "claude-3-haiku",
      "moonshot-v1-32k",
      "gpt-4o",
      "gemini-1.5-pro",
      "claude-3-5-sonnet",
      "o1-mini"
    ],
    "providers": {
      "gemini-2.0-flash-exp": {"provider": "gemini", "context_window": 32768},
      "gemini-1.5-flash": {"provider": "gemini", "context_window": 1000000},
      "gemini-1.5-pro": {"provider": "gemini", "context_window": 2000000},
      "gpt-4o-mini": {"provider": "openai", "context_window": 128000},
      "gpt-4o": {"provider": "openai", "context_window": 128000},
      "o1-mini": {"provider": "openai", "context_window": 128000},
      "deepseek-chat": {"provider": "deepseek", "context_window": 64000},
      "deepseek-reasoner": {"provider": "deepseek", "context_window": 64000},
      "claude-3-5-sonnet": {"provider": "anthropic", "context_window": 200000},
      "claude-3-haiku": {"provider": "anthropic", "context_window": 200000},
      "moonshot-v1-8k": {"provider": "moonshot", "context_window": 8000},
      "moonshot-v1-32k": {"provider": "moonshot", "context_window": 32000},
      "moonshot-v1-128k": {"provider": "moonshot", "context_window": 128000}
    }
  },
  "validation": {
    "enable_validation_agent": true,
    "enable_llm_validation": false,
    "min_description_length": 20,
    "check_encoding": true,
    "check_placeholders": true
  },
  "ensemble": {
    "enable_ensemble_review": false,
    "ensemble_mode": "basic",
    "models": {
      "primary": "gpt-4o-mini",
      "secondary": "gpt-4o",
      "synthesis": "claude-3-5-sonnet-20241022"
    }
  },
  "monitoring": {
    "enable_monitor": true,
    "print_summary_every_n": 5,
    "export_metrics": true,
    "metrics_output_dir": "reports/metrics"
  },
  "quality_thresholds": {
    "min_entities_per_interview": 5,
    "max_validation_errors_per_interview": 10,
    "min_completeness_score": 0.7,
    "critical_entity_types": ["pain_points", "processes", "systems"]
  },
  "entity_types": {
    "v1.0": {
      "required": ["pain_points", "processes", "systems"],
      "optional": ["kpis", "automation_candidates", "inefficiencies"]
    },
    "v2.0": {
      "required": ["communication_channels", "decision_points"],
      "optional": [
        "data_flows",
        "temporal_patterns",
        "failure_modes",
        "team_structures",
        "knowledge_gaps",
        "success_patterns",
        "budget_constraints",
        "external_dependencies"
      ]
    }
  },
  "database": {
    "batch_size": 100,
    "use_transactions": true,
    "connection_timeout": 30
  },
  "performance": {
    "parallel_processing": false,
    "max_workers": 4,
    "enable_caching": false
  },
  "consolidation": {
    "enabled": false,
    "use_semantic_similarity": true,
    "log_merge_decisions": true
  }
}
